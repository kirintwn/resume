{
  "branches": ["main"],
  "repositoryUrl": "git@github.com:kirintwn/resume.git",
  "plugins": [
    "@semantic-release/commit-analyzer",
    [
      "@semantic-release/release-notes-generator",
      {
        "preset": "conventionalcommits",
        "presetConfig": {
          "types": [
            { "type": "feat", "section": "Features" },
            { "type": "fix", "section": "Bug Fixes" },
            { "type": "chore", "hidden": false },
            { "type": "docs", "hidden": false },
            { "type": "style", "hidden": false },
            { "type": "refactor", "hidden": false },
            { "type": "perf", "hidden": false },
            { "type": "test", "hidden": false }
          ]
        }
      }
    ],
    "@semantic-release/changelog",
    [
      "@semantic-release/git",
      {
        "assets": ["CHANGELOG.md"],
        "message": "release: ${nextRelease.version}\n\n${nextRelease.notes}"
      }
    ],
    [
      "@semantic-release/github",
      {
        "assets": [
          {
            "path": "./resume.pdf",
            "label": "resume.pdf (compiled with XeLaTeX)",
            "name": "resume.pdf"
          }
        ]
      }
    ]
  ]
}
